<html lang='en'>
    <head>
        <meta charset='UTF-8' />
        <meta http-equiv='X-UA-Compatible' content='IE=edge' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <link rel='stylesheet' href='search_style.css' />
        <title>Travelto</title>
    </head>
    <body>
        <header>
            <a href='/'><h1>Travelto</h1></a>
        </header>
        <div>
            {{#each results}}
                <div onclick='parent.open("{{link}}")' target='_blank'>
                    <span>{{from}}</span>
                    <span>{{to}}</span>
                    <span>{{departure_date}}</span>
                    <span>{{return_date}}</span>
                    <span>{{price}}</span>
                </div>
            {{else}}
                <p>No results found!</p>
            {{/each}}
        </div>
        <footer>
            <a href='https://github.com/jonassterud/travelto'>Source code</a>
        </footer>
    </body>
</html>